{% extends "layout.njk" %}
{% block title %}
    <title>Teacher View</title>
{% endblock %}
{% block content %}
    <div class="card">
        <section class="img">
            <img src="https://source.unsplash.com/collection/8874679/400x500" alt="">
        </section>
        <section class="details">
            <h3>Detalhes</h3>
            <div class="item">
                <div>
                    Nome:
                </div>
                <div>
                    {{teacher.name}}
                </div>
            </div>
            <div class="item">
                <div>
                    Idade:
                </div>
                <div>
                    {{teacher.age}} anos
                </div>
            </div>
            <div class="item">
                <div>
                    Grau de Especialidade:
                </div>
                <div>
                    {{teacher.graduation}}
                </div>
            </div>
            <div class="item">
                <div>
                    Tipo de aula:
                </div>
                <div>
                    {{"Presencial" if teacher.type == "presencial" else "À distância" }}
                </div>
            </div>
            <div class="item">
                <div>
                    Acompanhamento:
                </div>
                <div>
                    {% for acom in teacher.acom %}
                    <span>{{acom}}</span>
                    {% endfor %}
                </div>
            </div>
            <div class="item">
                <div>
                    Desde
                </div>
                <div>
                    {{teacher.created_at}}
                </div>
            </div>
            <a href="/teachers/{{teacher.id}}/edit" class="button">Editar</a>            
        </section>
    </div>
{% endblock %}
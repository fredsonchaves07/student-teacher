{% extends "layout.njk" %}
{% block title %}
    <title>Edit students</title>
{% endblock %}
{% block content %}
    <div class="card">
        <section class="img">
            <img src="{{student.avatar_url}}" alt="">
        </section>
        <section class="details">
            <form action="/students?_method=PUT" method="POST" id="edit">
                <h3>editar aluno</h3>
                {% include "students/fields.njk" %}
                <input type="hidden" name="id" value="{{student.id}}">
            </form>

            <form id="delete"action="/students?_method=DELETE" method="POST">
                <input type="hidden" name="id" value={{student.id}}>
            </form>
            <div class="button-form">
                <button type="submit" form="edit" class="button-edit">Salvar</button>
                <button id="form-delete" type="submit" form="delete" class="button-delete">Deletar</button>
            </div>
            {% include "confirmation.njk" %}      
        </section>
    </div>
{% endblock %}
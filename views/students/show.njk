{% extends "layout.njk" %}
{% block title %}
    <title>Student View</title>
{% endblock %}
{% block content %}
    <div class="card">
        <section class="img">
            <img src="{{student.avatar_url}}" alt="">
        </section>
        <section class="details">
            <h3>Detalhes</h3>
            <div class="item">
                <div>
                    Nome:
                </div>
                <div>
                    {{student.name}}
                </div>
            </div>
            <div class="item">
                <div>
                    Idade:
                </div>
                <div>
                    {{student.age}} anos
                </div>
            </div>
            <div class="item">
                <div>
                    Email:
                </div>
                <div>
                    {{student.email}}
                </div>
            </div>
            <div class="item">
                <div>
                    Ano escolar:
                </div>
                <div>
                    {{student.graduation}}
                </div>
            </div>
            <div class="item">
                <div>
                    Carga Hor√°ria:
                </div>
                <div>
                   {{student.ch}}
                </div>
            </div>
            <a href="/students/{{student.id}}/edit" class="button button-edit">Editar</a>            
        </section>
    </div>
{% endblock %}
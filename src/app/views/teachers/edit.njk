{% extends "layout.njk" %}
{% block content %}
    <div class="card">
        <section class="img">
            <img src="{{teacher.avatar_url}}" alt="">
        </section>
        <section class="details">
            <form action="/teachers?_method=PUT" method="POST" id="edit">
                <h3>editar professor</h3>
                {% include "teachers/fields.njk" %}
                <input type="hidden" name="id" value="{{teacher.id}}">
            </form>

            <form id="delete"action="/teachers?_method=DELETE" method="POST">
                <input type="hidden" name="id" value={{teacher.id}}>
            </form>
            <div class="button-form">
                <button type="submit" form="edit" class="button-edit">Salvar</button>
                <button id="form-delete" type="submit" form="delete" class="button-delete">Deletar</button>
            </div>
                {% include "confirmation.njk" %}
            </section>
    </div>
{% endblock %}